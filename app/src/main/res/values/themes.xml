<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Tummoc" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryDark">#B3FF9800</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.Tummoc" parent="Base.Theme.Tummoc" />


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowDisablePreview">true</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.Tummoc</item>
    </style>

</resources>